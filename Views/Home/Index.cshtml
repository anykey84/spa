                        {
                            <li><a href="#/Contract">Договоры</a></li>
                        }
                        @if (ViewBag.VisibleTabTicket)
                        {
                            <li><a href="#/Ticket">Касса</a></li>
                        }
                        @if (ViewBag.VisibleTabAdmin)
                        {
                            <li><a href="#/Admin">Админка</a></li>
                        }
                        @if (ViewBag.VisibleTabArchive)
                        {
                            <li><a href="#/Archive">Архив</a></li>
                        }
