


<div ng-init="visibleOther = false">
    <button class="btn btn-default btn-block" ng-show="!visibleOther" ng-click="visibleOther = !visibleOther"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;
        Добавить платежный ордер
    </button>

    <div class="panel panel-primary" ng-show="visibleOther">
        <div class="panel-heading">Добавление платежного ордера</div>
        <div class="panel-body">
            <div ng-show="processing['loadProfiles']">
                <my-progressbar message="{{message}}"
                                visible="true"
                                typebar="Leonardo" />
                <br />
            </div>
            <div ng-show="!processing['loadProfiles']">
                <form>
                    <div class="form-group">
                        <label class="control-label">выберите тип назначения денежных средств</label>
                            <select ng-model="selected"
                                    ng-options="item as item.reason for item in paymentaccounts"
                                    ng-change="paymentAccountChanged(selected)"
                                    class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Сумма платежа</label>
                            <input type="number" ng-model="sum"
                                   class="form-control" step="1000" min="0"/>
                    </div>
                    <button class="btn btn-danger" ng-click="visibleOther = !visibleOther">Отмена</button>
                    <button class="btn btn-success" ng-click="addPayment(); visibleOther = !visibleOther;">Создать</button>
                </form>
            </div>
        </div>

    </div>
</div>
