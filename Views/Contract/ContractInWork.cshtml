                        </div>
                        <div class="col-xs-4">
                        </div>
                    </div>
                </div>*@
                    
                </div>
                <div>
                    <my-contracttable contracts="contracts" isvisibleattach="true" loadcontracts="loadContractsInWork()" />
                </div>
            </div>
        </div>
    </div>
</div>
