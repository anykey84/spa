                <div>
                    @*class="form-horizontal">*@
                    <form class="form-inline" ng-submit="loadContractsInWork();">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>c</label>
                                    <input type="number" class="form-control" ng-model="countFrom">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label >по</label>
                                    <input type="number" class="form-control" ng-model="countTo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>номер займа</label>
                                    <input type="number" class="form-control" ng-model="contractNumber">   
                                </div>
                            </div>
                        </div>
                        <br />
                        <input type="submit" class="btn btn-primary btn-sm"
                                 value="Сгенерировать">
                    </form>

                    @*<div class="container-fluid">
                    <div class="row">
