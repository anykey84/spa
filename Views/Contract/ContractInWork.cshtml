<div ng-show="VisibleContractInWork">
    <div class="panel panel-primary">
        <div class="panel-heading">
            Закрепление договоров
        </div>
        <div class="panel-body">
            <div>
                <div ng-show="processing['loadContractsInWork']
             || processing['attachContractsInWork']
             || processing['detachContractsInWork']
             || processing['loadProfilesInWork']">

                    <my-progressbar message="{{message}}"
                                    visible="true"
                                    typebar="line" />
                    <br />
                </div>

                <div>
                    <my-servermessages messages="messages" />
                </div>
            </div>


            <div ng-show="!processing['loadContractsInWork']
             && !processing['attachContractsInWork']
             && !processing['detachContractsInWork']
             && !processing['loadProfilesInWork']">
