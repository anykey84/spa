<div>
    <div ng-init="visiblereportanalysisoffice = false;">
        <div>
            <button class="btn btn-primary btn-sm"
                    ng-show="!visiblereportanalysisoffice"
                    ng-click="visiblereportanalysisoffice = !visiblereportanalysisoffice; visibleClick(visiblereportanalysisoffice);">
                анализ торговой точки
            </button>


            <div ng-show="visiblereportanalysisoffice">

                <legend>анализ торговой точки</legend>

                <div class="form-inline">

                    <div class="form-group">
                        <label for="idvisiblereportanalysisoffice"
                               class="col-sm-2 control-label">выберите офис</label>
                        <div class="col-sm-10">
                            <select ng-model="selected"
                                    ng-options="item as item.name for item in offices"
                                    ng-change="officeChanged(selected);"
                                    class=" form-control" id="idvisiblereportanalysisoffice" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-2 control-label">период с:</label>
                        <div class="col-sm-10">
                            <input type="date"
                                   class="form-control"
                                   ng-model="dateReport.date" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">по: </label>
                        <div class="col-sm-10">
                            <input type="date"
                                   class="form-control"
                                   ng-model="dateReport.dateTo" />
                        </div>
                    </div>

                    <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
                </div>
                <br />
                <button class="btn btn-primary btn-sm" ng-click="visiblereportanalysisoffice = !visiblereportanalysisoffice; visibleClick(visiblereportanalysisoffice); ">закрыть</button>
            </div>
        </div>
    </div>
</div>
