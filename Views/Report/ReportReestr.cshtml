<div ng-init="visiblereportreestr = false;">
    <div>
        <button class="btn btn-primary btn-sm"
                ng-show="!visiblereportreestr"
                ng-click="visiblereportreestr = !visiblereportreestr; visibleClick(visiblereportreestr);">
            реестр кпк
        </button>

        <div ng-show="visiblereportreestr">

            <legend>реестр физических лиц принятых (вышедших) в члены КПК</legend>

            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-2 control-label">выберите дату</label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               ng-model="dateReport.date" />
                    </div>
                </div>

                <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
            </div>

            <br />
            <button class="btn btn-primary btn-sm" ng-click="visiblereportreestr = !visiblereportreestr; visibleClick(visiblereportreestr); ">закрыть</button>
        </div>

    </div>
</div>

