<div ng-init="visiblereportsalescall = false;">
    <div>
        <button class="btn btn-primary btn-sm"
                ng-show="!visiblereportsalescall"
                ng-click="visiblereportsalescall = !visiblereportsalescall; visibleClick(visiblereportsalescall);">
            отчет по продажам (call)
        </button>


        <div ng-show="visiblereportsalescall">

            <legend>отчет по продажам (call)</legend>

            <div class="form-inline">

                <div class="form-group">
                    <label class="col-sm-2 control-label">период с:</label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               ng-model="dateReport.date" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">по: </label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               ng-model="dateReport.dateTo" />
                    </div>
                </div>

                <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
            </div>
            <br />
            <button class="btn btn-primary btn-sm" ng-click="visiblereportsalescall = !visiblereportsalescall; visibleClick(visiblereportsalescall); ">закрыть</button>
        </div>
    </div>
</div>
