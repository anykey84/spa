<div>
    <div ng-init="visiblereportmanagerreturnsissuance = false;">
        <div>
            <button class="btn btn-primary btn-sm"
                    ng-show="!visiblereportmanagerreturnsissuance"
                    ng-click="visiblereportmanagerreturnsissuance = !visiblereportmanagerreturnsissuance; visibleClick(visiblereportmanagerreturnsissuance);">
                отчет возврат и выдача по региональным менеджерам
            </button>


            <div ng-show="visiblereportmanagerreturnsissuance">

                <legend>отчет возврат и выдача по региональным менеджерам</legend>

                <div class="form-inline">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">период с:</label>
                        <div class="col-sm-10">
                            <input type="date"
                                   class="form-control"
                                   ng-model="dateReport.date" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">по: </label>
                        <div class="col-sm-10">
                            <input type="date"
                                   class="form-control"
                                   ng-model="dateReport.dateTo" />
                        </div>
                    </div>

                    <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
                </div>
                <br />
                <button class="btn btn-primary btn-sm" ng-click="visiblereportmanagerreturnsissuance = !visiblereportmanagerreturnsissuance; visibleClick(visiblereportmanagerreturnsissuance); ">закрыть</button>
            </div>
        </div>
    </div>
</div>