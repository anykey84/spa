
<div ng-init="visiblereportaverageweighted = false;">
    <div>
        <button class="btn btn-primary btn-sm"
                ng-show="!visiblereportaverageweighted"
                ng-click="visiblereportaverageweighted = !visiblereportaverageweighted; visibleClick(visiblereportaverageweighted);">
            средневзвешенные значения ПСК
        </button>


        <div ng-show="visiblereportaverageweighted">

            <legend>отчет средневзвешенные значения ПСК</legend>

            <div class="form-inline">

                <div class="form-group">
                    <label class="col-sm-2 control-label">период с:</label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               ng-model="dateReport.date" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">по: </label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               ng-model="dateReport.dateTo" />
                    </div>
                </div>

                <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
            </div>
            <br />
            <button class="btn btn-primary btn-sm" ng-click="visiblereportaverageweighted = !visiblereportaverageweighted; visibleClick(visiblereportaverageweighted); ">закрыть</button>
        </div>
    </div>
</div>
