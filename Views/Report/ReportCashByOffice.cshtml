<div ng-init="visiblereportcashbyoffice = false;">
    <div>
        <button class="btn btn-default btn-block"
                ng-show="!visiblereportcashbyoffice"
                ng-click="visiblereportcashbyoffice = !visiblereportcashbyoffice; visibleClick(visiblereportcashbyoffice);"><span class="glyphicon glyphicon-file"></span>&nbsp;
            Создать отчет по кассе c выбором точек
        </button>

        <div ng-show="visiblereportcashbyoffice">

            <legend>отчет по кассе c выбором точек</legend>

            <div class="form-horizontal">

                <div class="form-group">
                    <label for="idvisiblereportcashbyoffice" class="col-sm-2 control-label">выберите дату</label>
                    <div class="col-sm-10">
                        <input type="date"
                               class="form-control"
                               id="idvisiblereportcashbyoffice"
                               ng-model="dateReport.date" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="idvisiblereportcashbyofficeoffice"
                           class="col-sm-2 control-label">выберите офис</label>
                    <div class="col-sm-10">
                        <select ng-model="selected"
                                ng-options="item as item.name for item in offices"
                                ng-change="officeChanged(selected);"
                                class=" form-control" id="idvisiblereportcashbyofficeoffice" />
                    </div>
                </div>

                <button class="btn btn-primary btn-sm" ng-click="generateReport();">сгенерировать</button>
            </div>

            <br />
            <button class="btn btn-primary btn-sm" ng-click="visiblereportcashbyoffice = !visiblereportcashbyoffice; visibleClick(visiblereportcashbyoffice); ">закрыть</button>
        </div>

    </div>
</div>

